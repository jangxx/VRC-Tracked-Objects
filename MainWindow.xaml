<Window x:Class="VRC_OSC_ExternallyTrackedObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRC_OSC_ExternallyTrackedObject"
        mc:Ignorable="d"
        x:Name="MainWindowName" PreviewKeyDown="MainWindowName_KeyDown"
        Title="VRC Tracked Objects" Width="450" ResizeMode="CanMinimize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open config file" Click="Btn_openConfig"></MenuItem>
                <MenuItem Header="_Save config file" Click="Btn_saveConfig"></MenuItem>
            </MenuItem>
        </Menu>
        <DockPanel>
            <GroupBox Header="Global Settings" DockPanel.Dock="Top">
                <StackPanel>
                    <Border BorderThickness="5,5,5,5">
                        <CheckBox Content="Start tracking when launched from config file" ToolTip="Automatically start tracking when this config file is loaded as a launch parameter" x:Name="AutostartCheckbox"></CheckBox>
                    </Border>
                    <local:LabeledInput LabelWidth="150" LabelText="OSC Input Address" x:Name="OSCInputAddress"></local:LabeledInput>
                    <local:LabeledInput LabelWidth="150" LabelText="OSC Output Address" x:Name="OSCOutputAddress"></local:LabeledInput>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"></ColumnDefinition>
                            <ColumnDefinition Width="110"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Button Grid.RowSpan="2" FontSize="9" VerticalAlignment="Center" Height="30" Click="DevicesRefresh_Click">Refresh</Button>
                        <Label  Grid.Column="1" Height="28" Content="Controller" HorizontalAlignment="Left"></Label>
                        <ComboBox Grid.Column="2" Height="20" x:Name="ControllerDropdown" SelectionChanged="ControllerDropdown_SelectionChanged" DisplayMemberPath="DisplayName" SelectedValuePath="Serial" />
                        <Label Grid.Row="1" Grid.Column="1" Height="28" Content="Tracked Device" HorizontalAlignment="Left"></Label>
                        <ComboBox Grid.Row="1" Grid.Column="2" Height="20" x:Name="TrackerDropdown" SelectionChanged="TrackerDropdown_SelectionChanged" DisplayMemberPath="DisplayName" SelectedValuePath="Serial" />
                    </Grid>
                </StackPanel>
            </GroupBox>
            <ComboBox DockPanel.Dock="Top" Margin="5,5,5,5" DisplayMemberPath="Name" SelectedValuePath="Id" x:Name="ConfigurationDropdown" SelectionChanged="ConfigurationDropdown_SelectionChanged" />
            <TabControl>
                <TabItem Header="Tracking" x:Name="TrackingTab">
                    <StackPanel>
                        <GroupBox Header="Parameters">
                            <StackPanel>
                                <local:LabeledInput LabelWidth="150" LabelText="Activate (bool) [optional]" x:Name="ParamTrigger"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Position X (float)" x:Name="ParamPosX"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Position Y (float)" x:Name="ParamPosY"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Position Z (float)" x:Name="ParamPosZ"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Rotation X (float)" x:Name="ParamRotX"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Rotation Y (float)" x:Name="ParamRotY"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Rotation Z (float)" x:Name="ParamRotZ"></local:LabeledInput>
                            </StackPanel>
                        </GroupBox>
                        <Grid Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Height="28" Content="Current status" HorizontalAlignment="Left"></Label>
                            <Label Grid.Column="1" Height="28" Content="inactive" HorizontalAlignment="Left" x:Name="CurrentStatusLabel"></Label>
                        </Grid>
                        <Button Margin="5,5,5,5" Height="25" x:Name="StartTrackingButton" Click="StartTrackingButton_Click">Start Tracking</Button>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Calibration" x:Name="CalibrationTab">
                    <StackPanel>
                        <GroupBox Header="Calibration Values">
                            <StackPanel>
                                <local:LabeledInput LabelWidth="150" LabelText="Scale" x:Name="CalibrationScale"/>
                                <local:LabeledInput LabelWidth="150" LabelText="Translation X" x:Name="CalibrationPosX"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Translation Y" x:Name="CalibrationPosY"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Translation Z" x:Name="CalibrationPosZ"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Rotation X" x:Name="CalibrationRotX"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Rotation Y" x:Name="CalibrationRotY"></local:LabeledInput>
                                <local:LabeledInput LabelWidth="150" LabelText="Rotation Z" x:Name="CalibrationRotZ"></local:LabeledInput>
                            </StackPanel>
                        </GroupBox>
                        <Button Margin="5,5,5,5" Height="25" x:Name="StartCalibrationButton" Click="StartCalibrationButton_Click">Start Calibration</Button>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Configurations" x:Name="ConfigurationsTab">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ListBox Grid.Column="0" DisplayMemberPath="DisplayName" SelectedValuePath="Id" x:Name="ConfigurationListBox" HorizontalAlignment="Stretch" Margin="5,5,5,5"/>
                            <StackPanel Grid.Column="1" Margin="5,5,5,5">
                                <Button Margin="5,0,5,5" Height="20" Click="Btn_deleteConfiguration">Delete configuration</Button>
                                <GroupBox Header="Add configuration">
                                    <StackPanel>
                                        <local:LabeledInput LabelWidth="50" LabelText="Name" x:Name="NewConfigurationName"></local:LabeledInput>
                                        <Button Margin="5,5,5,5" Height="20" Click="Btn_addConfiguration">Add configuration</Button>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                        <GroupBox Header="Avatars in configuration">
                            <StackPanel>
                                <ListBox Margin="5,5,5,5"  Height="100" DisplayMemberPath="DisplayName" SelectedValuePath="Id" x:Name="ConfigurationAvatarsListBox"/>
                                <Button Margin="5,0,5,5" Height="20" Click="Btn_deleteAvatarFromConfiguration">Delete avatar from configuration</Button>
                                <GroupBox Header="Add avatar to configuration">
                                    <StackPanel>
                                        <local:LabeledInput LabelWidth="150" LabelText="Avatar ID" x:Name="NewAvatarId"></local:LabeledInput>
                                        <local:LabeledInput LabelWidth="150" LabelText="Avatar Name" x:Name="NewAvatarName"></local:LabeledInput>
                                        <Button Margin="5,5,5,5" Height="20" Click="Btn_addAvatarToConfiguration">Add to configuration</Button>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </DockPanel>
    </DockPanel>
</Window>
